rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email != null &&
             (request.auth.token.admin == true || 
              request.auth.token.email in ['your-admin-email@example.com']);
    }
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Menu collection rules
    // - Anyone can read menu items (public)
    // - Only admins can create, update, or delete menu items
    match /menu/{menuId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Orders collection rules
    // - Anyone can create orders (for guest checkout)
    // - Admins can read all orders
    // - Authenticated users can read orders they created (matched by uid)
    // - Unauthenticated users cannot read orders (admin-only after creation)
    match /orders/{orderId} {
      allow read: if isAdmin() || 
                     (isAuthenticated() && resource.data.createdBy == request.auth.uid);
      allow create: if request.resource.data.keys().hasAll(['customerName', 'customerPhone', 'items', 'total', 'status']) &&
                       request.resource.data.status == 'pending';
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Customers collection (optional - for analytics)
    match /customers/{customerId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}

